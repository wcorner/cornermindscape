---
import Author from './Author.astro';

export interface Props {
	title: string;
	author: string;
	publishDate: string;
	heroImage: string;
	alt: string;
}
const { title, author, publishDate, heroImage, alt } = Astro.props;
---

<div class="layout">
	<article class="content">
		<div>
			<header>
				{heroImage && <img width="720" height="420" class="hero-image" loading="lazy" src={heroImage} alt="test" />}
				<p class="publish-date">{publishDate}</p>
				<h1 class="title">{title}</h1>
				<Author name={author} href="https://twitter.com/WilliamCorner" />
			</header>
			<main class="flow">
				<slot />
			</main>
		</div>
	</article>
</div>